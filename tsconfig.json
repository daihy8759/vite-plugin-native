{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "allowJs": true,
        "declaration": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "typings"]
}
